<div class="row">
  <div class="col-md-12"><h1>Galleries</h1></div>
</div>
<div class="row">
  <div class="col-md-2">
    <%= link_to 'New', new_gallery_path, :class => 'btn btn-mini' %>
  </div>
</div>
<div class="row">
  <% @galleries.each do |gallery| %>
      <div class="col-md-2 thumbnail" id="gallery_<%= gallery.id %>">
          <% if gallery.pictures.first %>
              <%= link_to image_tag(gallery.pictures.first.image.url, class: 'img-responsive'), gallery_path(gallery) %>
          <% else %>
              N/A
          <% end %>
          <div class="caption">
            <p style="text-align: center;">
              <%= link_to gallery.name.truncate(14), gallery_path(gallery) %><br/>
              <%= link_to "Show", gallery_path(gallery) %>
              <%= link_to "Edit", edit_gallery_path(gallery) %>
              <%= link_to "Delete", gallery,
                          :data => { :confirm => "Are you sure?" },
                          :method => :delete
              %>
            </p>
          </div>
      </div>
  <% end %>
</div>