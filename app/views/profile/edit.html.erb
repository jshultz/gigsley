<h1>Create/Update Your Profile</h1>
<div class="row">
  <div class="col-md-3 col-md-offset-9"><%= link_to "Looking for Help?", profile_index_path %></div>
</div>
<div class="row">
  <div class="col-md-3 col-md-offset-1">
    <div class="row">
      <div class="col-md-12 profileSidebarBorder">
        <div class="row">
          <div class="col-md-12">&nbsp;</div>
        </div>
        <%= render "profile/sidebar" %>
      </div>
    </div>

  </div>
  <div class="col-md-6">
    <div class="row">
      <div class="col-md-12 profileBorder">
        <div class="row">
          <div class="col-md-12">&nbsp;</div>
        </div>
        <div class="row">
          <div class="col-md-12">
            <p>Ready to find a job? Fill out basic account information to set up your account and get started. You can finish the rest of your profile later on.</p>
          </div>
        </div>
        <div class="row">
          <div class="col-md-12">
            <% if @profile.errors.present? %>
                <div class="alert alert-warning">
                  <strong>Warning!</strong> <%= @profile.errors.full_messages.first if @profile.errors.any? %>
                </div>
            <% end unless @profile.blank? %>
          </div>
        </div>
        <div class="row">
          <div class="col-md-12">
            <%= simple_form_for :profile, url: profile_edit_path do |f| %>
                <div class="row">
                  <div class="col-md-12">
                    <%= f.input :name, as: :string, input_html: {value: @user.profile.present? ? @user.profile.name : ''}, required:true, error: 'Username is mandatory, please specify one'  %>
                  </div>
                </div>
                <div class="row">
                  <div class="col-md-12">
                    <%= f.input :email, as: :email, input_html: {value: @user.profile.present? ? @user.profile.email : ''}, placeholder: 'user@domain.com'  %>
                  </div>
                </div>
                <div class="row">
                  <div class="col-md-12">
                    <%= f.input :street, as: :string, input_html: {value: @user.profile.present? ? @user.profile.street : ''}  %>
                  </div>
                </div>
                <div class="row">
                  <div class="col-md-12">
                    <%= f.input :city, as: :string,  input_html: {value: @user.profile.present? ? @user.profile.city : ''}  %>
                  </div>
                </div>
                <div class="row">
                  <div class="col-md-12">
                    <%= f.input :state, as: :string,  input_html: {value: @user.profile.present? ? @user.profile.state : ''}  %>
                  </div>
                </div>
                <div class="row">
                  <div class="col-md-12">
                    <%= f.input :home_phone, as: :tel,  input_html: {value: @user.profile.present? ? @user.profile.home_phone : ''}  %>
                  </div>
                </div>
                <div class="row">
                  <div class="col-md-12">
                    <%= f.input :mobile_phone, as: :tel,  input_html: {value: @user.profile.present? ? @user.profile.mobile_phone : ''}  %>
                  </div>
                </div>
                <div class="row">
                  <div class="col-md-12">
                    <%= f.input :skill_list, as: :string, label: "Skill List (comma separated)", input_html: {value: @user.profile.skill_list } %>
                  </div>
                </div>
                <div class="row">
                  <div class="col-md-12">
                    <%= f.input :customer, label: "Do you wish to register as a Customer?", as: :boolean, boolean_style: :inline, input_html: {value: @user.profile.present? ? @user.profile.customer : ''} %>
                  </div>
                </div>
                <div class="row">
                  <div class="col-md-12">
                    <%= f.input :provider, label: "Do you wish to register as a Provider?", as: :boolean, boolean_style: :inline, input_html: {value: @user.profile.present? ? @user.profile.provider : ''} %>
                  </div>
                </div>

                <div class="row">
                  <div class="col-md-12">
                    <%= f.submit %>
                  </div>
                </div>
            <% end %>
          </div>
        </div>
        <div class="row">
          <div class="col-md-12">&nbsp;</div>
        </div>
      </div>
    </div>
  </div>
</div>
