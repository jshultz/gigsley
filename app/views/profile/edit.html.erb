<h1>Create/Update Your Profile</h1>
<div class="row">
  <div class="col-md-3 col-md-offset-9"><%= link_to "Looking for Help?", profile_index_path %></div>
</div>
<div class="row">
  <div class="col-md-3 col-md-offset-1">
    <div class="row">
      <div class="col-md-12 profileSidebarBorder">
        <div class="row">
          <div class="col-md-12">&nbsp;</div>
        </div>
        <%= render "profile/sidebar" %>
      </div>
    </div>

  </div>
  <div class="col-md-6">
    <div class="row">
      <div class="col-md-12 profileBorder">
        <div class="row">
          <div class="col-md-12">&nbsp;</div>
        </div>
        <div class="row">
          <div class="col-md-12">
            <p>Ready to find a job? Fill out basic account information to set up your account and get started. You can finish the rest of your profile later on.</p>
          </div>
        </div>
        <div class="row">
          <div class="col-md-12">
            <%= bootstrap_form_for :profile, url: {action: 'create'} do |f| %>
                <%= f.text_field :street, value: @user.profile.present? ? @user.profile.street : nil  %>
                <%= f.text_field :city, value: @user.profile.present? ? @user.profile.city : nil  %><br />
                <%= f.text_field :state, value: @user.profile.present? ? @user.profile.state : nil  %><br />
                <%= f.text_field :home_phone, value: @user.profile.present? ? @user.profile.home_phone : nil  %><br />
                <%= f.text_field :mobile_phone, value: @user.profile.present? ? @user.profile.mobile_phone : nil  %><br />
                <%= f.collection_select :job_id, Job.all, :id, :name %>
                <%= f.text_field :skill_list, label: "Skill List (comma separated)", value: @user.profile.tag_list.present? ? @user.profile.tag_list.to_s : nil %><br />
                <%= f.check_box :terms, label: "I agree to the Terms of Use. For details on collection and use of your information, see our Privacy Policy." %><br />
                <%= f.submit %>
            <% end %>
          </div>
        </div>
        <div class="row">
          <div class="col-md-12">&nbsp;</div>
        </div>
      </div>
    </div>
  </div>
</div>
